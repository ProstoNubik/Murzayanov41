<Page x:Class="Murzayanov41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Murzayanov41"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="ProductPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Вы авторизованы как " FontSize="20"></TextBlock>
                <TextBlock Name="FIOTBlock" FontSize="20"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Роль:" FontSize="20"></TextBlock>
                <TextBlock Name="RoleTBlock" FontSize="20"></TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Name="TBlockProductsCount" FontSize="20"></TextBlock>
            
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Поиск по наименованию" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                <TextBox Name="TBoxSearch" FontSize="20" Width="350" HorizontalAlignment="Left" TextChanged="TBoxSearch_TextChanged"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <RadioButton Name="RButtonUp" Content="По возрастанию стоимости" FontSize="20" Checked="RButtonUp_Checked"></RadioButton>
                <RadioButton Name="RButtonDown" Content="По убыванию стоимости" FontSize="20" Checked="RButtonDown_Checked"></RadioButton>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Фильтрация по скидке" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                <ComboBox Name="ComboType" Width="200" HorizontalAlignment="Left" SelectionChanged="ComboBox_SelectionChanged">
                    <TextBlock Text="Всё" FontSize="20"></TextBlock>
                    <TextBlock Text="От 0 до 10%" FontSize="20"></TextBlock>
                    <TextBlock Text="От 10 до 15%" FontSize="20"></TextBlock>
                    <TextBlock Text="От 15% и более" FontSize="20"></TextBlock>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <ListView Name="ProductListView" Grid.Row="2" SelectionChanged="ProductListView_SelectionChanged">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить к заказу" Click="MenuItem_Click"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Image Width="200" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="4">
                            <Image.Source>
                                <Binding Path="ImageSource">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            Images/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Column="1" Text="{ Binding ProductName }" FontSize="20" FontWeight="Bold"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{ Binding ProductDescription }" FontSize="20"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{ Binding ProductManufacturer }" FontSize="20"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{ Binding ProductCost,StringFormat={}{0} рублей }" FontSize="20"></TextBlock>

                        <TextBlock Grid.Column="2" Text="Скидка" FontSize="25"></TextBlock>
                        <TextBlock Grid.Column="2" Text="{ Binding ProductDiscountAmount,StringFormat={}{0}% }" FontSize="30" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Center"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="OrderButton" Content="Оформить заказ" Click="OrderButton_Click" Grid.Row="3" Visibility="Hidden"></Button>
    </Grid>
</Page>
