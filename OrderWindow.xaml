<Window x:Class="Murzayanov41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Murzayanov41"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Дата формирования заказа" FontSize="20"></TextBlock>
        <DatePicker Name="OrderDatePicker" Grid.Column="1" FontSize="20" IsEnabled="False"></DatePicker>

        <TextBlock Grid.Row="1" FontSize="20" Text="Дата доставки заказа"></TextBlock>
        <DatePicker Name="OrderDeliveryDatePicker" Grid.Row="1" Grid.Column="1" FontSize="20" IsEnabled="False"></DatePicker>

        <TextBlock Grid.Row="2" FontSize="20" Text="ФИО клиента"></TextBlock>
        <TextBlock Name="FIOTBlock" Grid.Row="2" Grid.Column="1" FontSize="20"></TextBlock>

        <TextBlock Grid.Row="3" FontSize="20" Text="Номер заказа"></TextBlock>
        <TextBlock Name="OrderIDTBlock" Grid.Row="3" Grid.Column="1" FontSize="20"></TextBlock>

        <ListView Name="OrderListView" Grid.Row="4" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Image Width="200" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="5">
                            <Image.Source>
                                <Binding Path="ImageSource">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            Images/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Column="1" Text="{ Binding ProductName }" FontSize="20" FontWeight="Bold"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{ Binding ProductDescription }" FontSize="20"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{ Binding ProductManufacturer }" FontSize="20"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{ Binding ProductCost,StringFormat={}{0} рублей }" FontSize="20"></TextBlock>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4">
                            <Button Name="ButtonMinus" Content="-" Width="50" FontSize="15" Click="ButtonMinus_Click"></Button>
                            <TextBlock Name="QuantityTBlock" Text="{ Binding SelectedProductQuantity }" FontSize="30"></TextBlock>
                            <Button Name="ButtonPlus" Content="+" Width="50" FontSize="15" Click="ButtonPlus_Click"></Button>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="Скидка" FontSize="25"></TextBlock>
                        <TextBlock Grid.Column="2" Text="{ Binding ProductDiscountAmount,StringFormat={}{0}% }" FontSize="30" Grid.Row="1" Grid.RowSpan="4" HorizontalAlignment="Center"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <TextBlock FontSize="20" Text="Сумма заказа:"></TextBlock>
            <TextBlock Name="OrderCostAmountTBlock" FontSize="20"></TextBlock>
            <TextBlock Text=" " FontSize="20"></TextBlock>
            <TextBlock Name="OrderCostTBlock" FontSize="20" TextDecorations="Strikethrough"></TextBlock>
        </StackPanel>

        <TextBlock Text="Пункт выдачи" Grid.Row="6" FontSize="20"></TextBlock>
        <ComboBox Name="PickupPointsComboBox" Grid.Row="6" Grid.Column="1">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{ Binding PickUpPointIndex }"></TextBlock>
                        <TextBlock Text="{ Binding PickUpCity,StringFormat=' г.{0}' }"></TextBlock>
                        <TextBlock Text="{ Binding PickUpStreet,StringFormat=' ул.{0}' }"></TextBlock>
                        <TextBlock Text="{ Binding PickUpHouse,StringFormat=' {0}' }"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Name="SaveButton" Grid.Row="7" Grid.Column="1" Content="Сохранить" Click="SaveButton_Click"></Button>
    </Grid>
</Window>
